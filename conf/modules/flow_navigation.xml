<!DOCTYPE module SYSTEM "module.dtd">

<module name="Flow_navigation_Module" dir="testg4_module">
  <doc>
    <description>Module for the flow navigation</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="FlowNavigation">
         <dl_setting var="incrx" min="-0.5" step="0.1" max="0.5" shortname="incrx" />
         <dl_setting var="incry" min="-0.5" step="0.1" max="0.5" shortname="incry" />
         <dl_setting var="distthresh" min="0" step="0.1" max="2" shortname="distance_threshold_wall" />
         <dl_setting var="objectDetected" min="0" step="1" max="1" shortname="object_boolean" />
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="flow_navigation.h"/>
  </header>
  <init fun="flow_navigation_init()"/>
  <periodic fun="checkDistance()" freq="3"/>
  <makefile>
    <file name="flow_navigation.c"/>
  </makefile>
</module>

