<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">
<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="8" name="Bebop avoid orange TU Delft Cyberzoo" security_height="0.4">
  <waypoints>
    <!-- Basic Home point -->
    <waypoint name="HOME" x="0.0" y="0.0" height="0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6" height="5"/>
    <waypoint name="GOAL" x="2.0" y="2.0"/>
    <!-- Standby waypoint -->
    <waypoint name="STDBY" x="-0.7" y="-0.8" height="1.342321"/>
    <!-- TouchDown point -->
    <waypoint name="TD" x="0.8" y="-1.7"/>
    <!-- Cyberzoo Limits -->
    <waypoint lat="51.9906213" lon="4.3768628" name="_CZ1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_CZ2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_CZ3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="_CZ4"/>
    <!-- Corners of Obstacle Zone -->
    <waypoint lat="51.990624" lon="4.376845" name="_OZ1"/>
    <waypoint lat="51.990601" lon="4.376782" name="_OZ2"/>
    <waypoint lat="51.990638" lon="4.376748" name="_OZ3" alt="11.5"/>
    <waypoint lat="51.990662" lon="4.376803" name="_OZ4"/>
  </waypoints>
  <sectors>
    <sector color="red" name="CyberZoo">
      <corner name="_CZ4"/>
      <corner name="_CZ3"/>
      <corner name="_CZ2"/>
      <corner name="_CZ1"/>
    </sector>
    <sector color="#FF9922" name="ObstacleZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>
  </sectors>    
  <exceptions>
     <!--<exception cond="!InsideCyberZoo(GetPosX(), GetPosY())" deroute="Standby"/>-->
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="r" name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.25" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block key="g" name="START" strip_button="Go" strip_icon="lookfore.png">
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
    </block>
    <block name="StayGoal">
      <go wp="GOAL"/>
     <exception cond="block_time > 1" deroute="MoveGoalForward"/>
     <exception cond="!safeToGoForwards" deroute="ChangeHeading"/>
     <exception cond="!InsideObstacleZone(GetPosX(),GetPosY())" deroute="ChangeHeading"/>
    </block>
    <block name="MoveGoalForward">
      <call fun="moveWaypointForwards(WP_GOAL)"/>  
      <deroute block="StayGoal"/>
      <exception cond="!safeToGoForwards" deroute="ChangeHeading"/>
    </block>
    <block name="ChangeHeading">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <while cond="1">
        <call fun="increase_nav_heading(&nav_heading, 50)"/>
 	<call fun="moveWaypointForwards(WP_GOAL)"/>
        <go wp="STDBY"/>
      </while>
      <exception cond="And(safeToGoForwards,InsideObstacleZone(WaypointX(WP_GOAL),WaypointY(WP_GOAL)))" deroute="StayGoal"/>
    </block>
    <block key="l" name="Land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="Land">
      <go wp="TD"/>
    </block>
    <block name="Flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="Landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
