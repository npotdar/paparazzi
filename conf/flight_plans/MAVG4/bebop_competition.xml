<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.4" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Opticflow Avoidance" security_height="0.3">
  <header>
#include "autopilot.h"
#include "subsystems/ahrs.h"
#include "subsystems/electrical.h"
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="GOAL" x="1.0" y="1.0"/>
    <waypoint height="1.4" name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>
    <waypoint name="HEADING" x="0.0" y="0.0"/>
    <waypoint lat="51.9906213" lon="4.3768628" name="_CZ1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_CZ2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_CZ3"/>
    <waypoint lat="51.990667" lon="4.376806" name="_CZ4"/>
    <waypoint lat="51.990627" lon="4.376862" name="_OZ1"/>
    <waypoint lat="51.990592" lon="4.376778" name="_OZ2"/>
    <waypoint lat="51.990643" lon="4.376719" name="_OZ3"/>
    <waypoint lat="51.990678" lon="4.376804" name="_OZ4"/>
  </waypoints>
  <sectors>
    <!--<sector color="red" name="CyberZoo">
      <corner name="_CZ1"/>
      <corner name="_CZ2"/>
      <corner name="_CZ3"/>
      <corner name="_CZ4"/>
    </sector>-->
    <sector color="#FF9922" name="ObstacleZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>
  </sectors>
  <exceptions>
    <exception cond="!InsideObstacleZone(GetPosX(), GetPosY())" deroute="Standby"/>
    <exception cond="OBS_DETECT && !(nav_block == IndexOfBlock('land')) && !(nav_block == IndexOfBlock('flare')) && !(nav_block == IndexOfBlock('landed')) && !(nav_block == IndexOfBlock('Start Engine')) && !(nav_block == IndexOfBlock('Takeoff'))" deroute="change_heading"/>
    <!--exception cond="datalink_time > 2" deroute="landhere"/-->
    <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('land')) && !(nav_block == IndexOfBlock('flare')) && !(nav_block == IndexOfBlock('landed'))" deroute="land"/>
    <exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('land')) && !(nav_block == IndexOfBlock('flare')) && !(nav_block == IndexOfBlock('landed'))" deroute="landhere"/>
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="r" name="Start Engine">
      <call fun="initialiseLines(WP__OZ1,WP__OZ2,WP__OZ3,WP__OZ4,WP_GOAL,WP_HEADING)"/>
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.25" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="stay_home">
      <stay wp="HOME"/>
    </block>
    <!-- TAKEOFF SEQUENCES UPTO HERE -->

    
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>
    <block key="g" name="START" strip_button="Go" strip_icon="lookfore.png">
      <call fun="trans_true()"/>
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
      <deroute block="StayGoal"/>
    </block>
    <block name="StayGoal">
      <call fun="trans_true()"/>
      <stay wp="GOAL"/>
      <exception cond="closeGoal()" deroute="distance_test"/>
      <exception cond="minDistanceExceed()" deroute="prepareObstacle"/>
      <deroute block="StayGoal"/>
    </block>
    <block name="distance_test">
    	<call fun="moveWaypointForwards(WP_GOAL,2.0)"/>
    	<deroute block="StayGoal"/>
    	<exception cond="minDistanceExceed()" deroute="prepareObstacle"/>
    </block>

    <!-- Obstacle Zone wall Detection -->
    <block name="prepareObstacle">
	<call fun="trans_false()"/>
    	<call fun="NavSetWaypointHere(WP_GOAL)"/> 
    	<call fun="NavSetWaypointHere(WP_STDBY)"/> 
    	<stay wp="STDBY"/>   	   	
    	<exception cond="block_time > 1" deroute="resetGoal"/>
    </block>
    <block name="resetGoal">
    	<call fun="NavSetWaypointHere(WP_STDBY)"/> 
    	<call fun="distToLine()"/> 
    	<!--call fun="moveWaypointForwards(WP_GOAL,2.0)"/>-->
    	<stay wp="STDBY"/>
    	<exception cond="block_time > 2" deroute="getOut"/>
    </block>
    <block name="getOut">
      <call fun="trans_true()"/>
      <stay wp="GOAL"/>
      <exception cond="closeGoal()" deroute="distance_test2"/>
      <exception cond="!minDistancePass()" deroute="StayGoal"/>	
    </block>
    <block name="distance_test2">
    	<!--call fun="distToLine()"/> -->
    	<call fun="moveWaypointForwards(WP_GOAL,2.0)"/>
    	<deroute block="getOut"/>
    </block>

    <!-- Obstacle Vision Detection -->
    <block name="change_heading">
    	<call fun="NavSetWaypointHere(WP_GOAL)"/> 
    	<call fun="changeHeading()"/>
    	<call fun="NavSetWaypointHere(WP_STDBY)"/> 
    	<stay wp="STDBY"/>	
    	<exception cond="block_time > 3" deroute="StayGoal"/>
    </block>


    <!-- LANDING SEQUENCES FROM HERE -->
    <block name="landhere" strip_button="Land Here" strip_icon="land-right.png" key="l">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed" key="k">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>

